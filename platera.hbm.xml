<?xml version="1.0" encoding="utf-8" ?>
<hibernate-mapping xmlns="urn:nhibernate-mapping-2.2"
                   assembly="2taldea"
                   namespace="_2taldea">

	<class name="Platera" table="platera" schema="3taldea">
		<id name="Id" column="id" type="int">
			<generator class="native"/>
		</id>
		<property name="Izena" column="izena" type="string" not-null="true"/>
		<property name="Deskribapena" column="deskribapena" type="string" not-null="true"/>
		<property name="Kategoria" column="kategoria" type="string" not-null="true"/>
		<property name="Kantitatea" column="kantitatea" type="int" not-null="true"/>
		<property name="Prezioa" column="prezioa" type="float" not-null="true"/>
